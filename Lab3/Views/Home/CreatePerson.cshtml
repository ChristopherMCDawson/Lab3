@model Lab3.Models.Student;
@{
    ViewBag.Title = "Create Person";
}

<h1>Create Your Favourite Student</h1>

@using (Html.BeginForm("Displayperson", "Home", FormMethod.Post))
{
    <p>First Name: @Html.TextBox("FirstName")</p>
    <p>Last Name: @Html.TextBox("LastName")</p>
    <p>Age: @Html.TextBox("Age","", new { type = "number" })</p>
    <p>Email Address: @Html.TextBox("Email","", new { type = "email" })</p>
    <p>Password: @Html.Password("Password")</p>
    <p>Description: @Html.TextBox("Description")</p>

    <button type="submit">Create</button>
}
